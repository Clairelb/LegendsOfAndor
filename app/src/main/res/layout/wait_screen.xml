<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wait_background"
    tools:context="com.example.LegendsOfAndor.WaitScreen">

    <TextView
        android:id="@+id/hero3"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:background="@color/transparent_gray"
        android:text="@string/wait_screen_hero"
        android:textColor="@color/black"
        android:textColorHint="@android:color/black"
        android:textSize="24sp"
        app:fontFamily="@font/gothic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player3" />

    <TextView
        android:id="@+id/hero2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="190dp"
        android:layout_marginRight="190dp"
        android:background="@color/transparent_gray"
        android:text="@string/wait_screen_hero"
        android:textColor="@color/black"
        android:textColorHint="@android:color/black"
        android:textSize="24sp"
        app:fontFamily="@font/gothic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2" />

    <TextView
        android:id="@+id/hero4"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="190dp"
        android:layout_marginRight="190dp"
        android:background="@color/transparent_gray"
        android:text="@string/wait_screen_hero"
        android:textColor="@color/black"
        android:textColorHint="@android:color/black"
        android:textSize="24sp"
        app:fontFamily="@font/gothic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player4" />

    <TextView
        android:id="@+id/hero1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:background="@color/transparent_gray"
        android:text="@string/wait_screen_hero"
        android:textColor="@color/black"
        android:textColorHint="@android:color/black"
        android:textSize="24sp"
        app:fontFamily="@font/gothic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1" />

    <View
        android:id="@+id/divider"
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501" />

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="308dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/transparent_gray"
        android:text="@string/Player1"
        android:textColor="@color/black"
        android:textColorHint="@android:color/black"
        android:textSize="24sp"
        app:fontFamily="@font/gothic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="190dp"
        android:layout_marginRight="190dp"
        android:background="@color/transparent_gray"
        android:text="@string/Player2"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:fontFamily="@font/gothic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player3"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="181dp"
        android:layout_marginBottom="108dp"
        android:background="@color/transparent_gray"
        android:text="@string/Player3"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:fontFamily="@font/gothic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player4"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="181dp"
        android:layout_marginEnd="190dp"
        android:layout_marginRight="190dp"
        android:layout_marginBottom="108dp"
        android:background="@color/transparent_gray"
        android:text="@string/Player4"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:fontFamily="@font/gothic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ready_button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/gray"
        android:fontFamily="@font/gothic"
        android:text="@string/ready"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/gray"
        android:entries="@array/character_class"
        android:fontFamily="@font/gothic"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ready_button" />

    <TextView
        android:id="@+id/ready1"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="@string/not_ready"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:fontFamily="@font/gothic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hero1" />

    <TextView
        android:id="@+id/ready2"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:layout_marginEnd="190dp"
        android:layout_marginRight="190dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="@string/not_ready"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:fontFamily="@font/gothic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hero2" />

    <TextView
        android:id="@+id/ready3"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="@string/not_ready"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:fontFamily="@font/gothic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hero3" />

    <TextView
        android:id="@+id/ready4"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:layout_marginEnd="190dp"
        android:layout_marginRight="190dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="@string/not_ready"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:fontFamily="@font/gothic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hero4" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/gray"
        android:fontFamily="@font/gothic"
        android:text="@string/confirm_hero"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner3" />

    <Button
        android:id="@+id/leave_lobby"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/gray"
        android:fontFamily="@font/gothic"
        android:text="@string/leave_lobby"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_game" />

    <Button
        android:id="@+id/start_game"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/gray"
        android:fontFamily="@font/gothic"
        android:text="@string/host_start_game"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm" />

</androidx.constraintlayout.widget.ConstraintLayout>
