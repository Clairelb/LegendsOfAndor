<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/interact_item_background"
    tools:context="com.example.LegendsOfAndor.InteractItem">

    <Spinner
        android:id="@+id/pickUpSpinner"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="84dp"
        android:background="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/pickUpItem"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/dropSpinner"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="172dp"
        android:background="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/dropItem"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pickUpItem"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="84dp"
        android:text="@string/pick_up_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dropItem"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="172dp"
        android:text="@string/drop_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
