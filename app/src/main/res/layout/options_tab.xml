<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/options_background"
    tools:context=".OptionsTab">


    <Button
        android:id="@+id/tasksb"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:layout_marginStart="456dp"
        android:layout_marginLeft="456dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:text="@string/Tasks"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/characterb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tasks" />

    <Button
        android:id="@+id/characterb"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="@string/Character"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Character" />

    <Button
        android:id="@+id/savegameb"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:layout_marginStart="456dp"
        android:layout_marginLeft="456dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="56dp"
        android:text="@string/SaveGame"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/leavegameb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tasksb"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Save Game" />

    <Button
        android:id="@+id/leavegameb"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="56dp"
        android:text="@string/LeaveGame"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterb"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Leave Game" />

    <Button
        android:id="@+id/backb"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/back_icon"
        android:rotation="180"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activateFog"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/activate_fog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/emptyWell"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="40dp"
        android:text="@string/empty_well"
        app:layout_constraintStart_toEndOf="@+id/activateFog"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/interactItem"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="128dp"
        android:text="@string/interact_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/trade"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="128dp"
        android:text="@string/trade"
        app:layout_constraintStart_toEndOf="@+id/interactItem"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/merchant"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="204dp"
        android:text="@string/merchant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/useArticle"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="204dp"
        android:text="@string/use_article"
        app:layout_constraintStart_toEndOf="@+id/merchant"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>