<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board"
    android:screenOrientation="landscape"
    tools:context="com.example.LegendsOfAndor.EventCard">


    <ImageView
        android:id="@+id/e1"
        android:layout_width="647dp"
        android:layout_height="500dp"
        android:src="@drawable/e1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="-58dp" />

    <ImageView
        android:id="@+id/e2"
        android:layout_width="647dp"
        android:layout_height="500dp"
        android:src="@drawable/e2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="-58dp" />

    <ImageView
        android:id="@+id/e3"
        android:layout_width="647dp"
        android:layout_height="500dp"
        android:src="@drawable/e3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="-58dp" />


    <ImageView
        android:id="@+id/e4"
        android:layout_width="647dp"
        android:layout_height="500dp"
        android:src="@drawable/e4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="-58dp" />

    <ImageView
        android:id="@+id/e5"
        android:layout_width="647dp"
        android:layout_height="500dp"
        android:src="@drawable/e5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="-45dp" />

    <Button
        android:id="@+id/backAndAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text=" Accept the event"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <Button
        android:id="@+id/useShield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Use your shield to reject the event"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <Button
        android:id="@+id/backToBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="344dp"
        android:text="Back to board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>
