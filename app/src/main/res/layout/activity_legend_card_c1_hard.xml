<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/legendcard_c1_hard"
    tools:context="com.example.LegendsOfAndor.LegendCardC1Hard">

    <Button
        android:id="@+id/next_legend_card_c1_hard"
        android:layout_width="271dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:text="NEXT LEGEND CARD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/roll_die_c1_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROLL DIE"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/next_legend_card_c1_hard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/hero_die_c1_hard"
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:layout_marginBottom="4dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/archer_dice" />
</androidx.constraintlayout.widget.ConstraintLayout>
